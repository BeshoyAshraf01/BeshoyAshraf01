@model Esam.ModelVm.CreateEmployeeVm

@{
    ViewData["Title"] = "Create New Employee";
}

<h2>Add New Employee</h2>

<form asp-action="SaveDataCreate" method="post" enctype="multipart/form-data">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label font-weight-bold"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter full name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Salary" class="form-label font-weight-bold"></label>
        <input asp-for="Salary" class="form-control" type="number"/>
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Image" class="form-label font-weight-bold"></label>
        <input asp-for="Image" class="form-control" type="file"/>
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save Employee</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
</form>

@section Scripts {
    @* هذا السكريبت يفعل الـ Validation في المتصفح قبل إرسال البيانات للسيرفر *@
    <partial name="_ValidationScriptsPartial"/>
}

@model Esam.DAL.Entities.Employee

@{
    ViewBag.Title = "Edit Employee";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h2>Edit Employee</h2>
    <hr/>

    <form asp-action="SaveEditData" method="post">
        <input type="hidden" asp-for="Id"/>

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Salary" class="form-label">Salary</label>
            <input asp-for="Salary" class="form-control" type="number" step="0.01"/>
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </form>
</div>

@section Scripts {
    @* تفعيل الـ Validation في جهة العميل (Client-side) لسرعة الأداء *@
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

@model List<Esam.ModelVm.GetEmployeeVm>

@{
    ViewData["Title"] = "Employee List";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Employees Management</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Employee
    </a>
</div>

<table class="table table-bordered table-hover shadow-sm">
    <thead class="table-dark">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Salary</th>
        <th class="text-center">Actions</th>
        <th>Image</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model){
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Salary.ToString("C")</td> @* تنسيق الراتب كعملة *@
            <td class="text-center">
                <div class="btn-group" role="group">
                    <a asp-action="GetById" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                        View
                    </a>

                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm text-white">
                        Edit
                    </a>

                    <a asp-action="Delete" asp-route-id="@item.Id"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this employee?')">
                        Delete
                    </a>
                </div>
            </td>
            <td>
                @if (!string.IsNullOrEmpty(item.ImageName))
                {
                    <img src="/File/@item.ImageName" style="width: 50px; height: 50px; border-radius: 50%; object-fit: cover;" alt="Employee Image" />
                }
                else
                {
                    <span>No Image</span>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
